{
  "name": "global-variable-x",
  "version": "0.0.0",
  "scripts": {
    "start": "npm run start --prefix global-variable-x-frontend",
    "install-frontend": "npm install --prefix global-variable-x-frontend",
    "lint": "npm run lint --prefix global-variable-x-frontend",
    "build-frontend": "npm run build --prefix global-variable-x-frontend",
    "copy-frontend": "ncp 'global-variable-x-frontend/dist' 'dist'",
    "write-sbom": "npm run write-sbom-frontend",
    "write-sbom-frontend": "write-ur-packages ./global-variable-x-frontend/package-lock.json dist",
    "prebuild": "npm run clean-dist && npm run clean-target && npm run validate-manifest",
    "postinstall": "npm run install-frontend",
    "build": "npm run build-frontend",
    "prepackage": "mkdir dist && npm run copy-frontend && npm run copy-manifest && npm run copy-license && npm run write-sbom",
    "postbuild": "npm run package",
    "package": "package-urcap dist target",
    "copy-manifest": "ncp 'manifest.yaml' 'dist/manifest.yaml'",
    "copy-license": "ncp 'LICENSE' 'dist/LICENSE'",
    "clean-dist": "rimraf dist",
    "clean-target": "rimraf target",
    "install-urcap": "install-urcap 'target/global-variable-x*.urcapx' '../manifest-spec-19.9.9.json'",
    "delete-urcap": "delete-urcap funh global-variable-x",
    "validate-manifest": "validate-manifest 'manifest.yaml' '../manifest-spec-19.9.9.json'"
  },
  "private": true,
  "devDependencies": {
    "@universal-robots/urcap-utils": "2.0.1",
    "ncp": "2.0.0",
    "rimraf": "5.0.7"
  }
}
